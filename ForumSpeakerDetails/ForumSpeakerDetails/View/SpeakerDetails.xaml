<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForumSpeakerDetails.View.SpeakerDetails">

  <ScrollView Padding="10">
    <StackLayout Spacing="10">
      <!-- Detail controls here -->
      <Image Source="{Binding Avatar}" HeightRequest="200" WidthRequest="200"/>
      <Label Text="{Binding Name}" FontSize="24"/>
      <Label Text="{Binding Title}" TextColor="Purple"/>
      <Label Text="{Binding Description}"/>
      <Button Text="Speak" x:Name="ButtonSpeak" Clicked="ButtonSpeak_Clicked"/>
      <Button Text="Go to Website" x:Name="ButtonWebsite" Clicked="ButtonWebsite_Clicked"/>
    </StackLayout>
  </ScrollView>
  
</ContentPage>